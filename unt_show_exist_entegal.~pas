unit unt_show_exist_entegal;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, Grids, DBGrids, DB, StdCtrls;

type
  Tfrm_show_exist_entegal = class(TForm)
    DBGrid2: TDBGrid;
    DataSource1: TDataSource;
